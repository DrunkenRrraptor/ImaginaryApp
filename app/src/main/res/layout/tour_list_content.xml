<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_image_view"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_margin_big"/>

    <TextView
        android:id="@+id/list_tour_title"
        android:textSize="@dimen/text_size_medium"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin_small"
        android:layout_toRightOf="@id/list_image_view"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/list_short_description"
        android:textSize="@dimen/text_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_tour_title"
        android:layout_toRightOf="@id/list_image_view"
        android:layout_marginLeft="@dimen/layout_margin"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/list_end-date"
        android:textSize="@dimen/text_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_image_view"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_below="@id/list_short_description"/>

    <TextView
        android:id="@+id/list_price"
        android:textSize="@dimen/text_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="@dimen/text_margin_small"
        android:layout_marginRight="@dimen/text_margin_big"
        android:layout_marginLeft="@dimen/text_margin_big"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/text_size_small"
        android:layout_marginLeft="@dimen/text_margin_big"
        android:layout_marginRight="@dimen/text_margin_big"
        android:layout_below="@id/list_end-date"
        android:background="@color/colorAccent"/>


</RelativeLayout>